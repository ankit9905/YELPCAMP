<%- include('../partials/header'); -%>
    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Welcome to Yelpcamp</h1>
                <p>hello guys hope you are enjoying working with us</p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add new Campgrounds</a>
            </div>
        </header>

        <div class="row text-center" style="display:flex;flex-wrap: wrap;">
            <% camp.forEach(function(camp) { %>
                <div class="col-md-4 col-sm-12" style="overflow:hidden;">
                    <div class="img-thumbnail">
                        <img src="<%=camp.image%>" alt="sorry" style="background: cover;height: 300px;width:100%;">
                        <div class="figure-caption">
                            <h4>
                                <%= camp.name %>
                            </h4>
                        </div>
                        <p>
                            <a href="/campgrounds/<%= camp._id%>" class="btn btn-primary">More info</a>
                        </p>
                    </div>
                </div>


                <% }); %>
        </div>


    </div>
    <%- include('../partials/footer');    -%>